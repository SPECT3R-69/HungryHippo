{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", 
    "lib": [
      "esnext",
      "ES2020.String"
    ],
    "declaration": false,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowJs": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules"
  ]
}